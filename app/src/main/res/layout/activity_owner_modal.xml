<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/colorWhite"
    tools:context=".activity.owner.OwnerModalActivity">

    <TextView
        android:id="@+id/tv_modal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="@string/modal_usaha"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ib_back2"
        android:layout_width="43sp"
        android:layout_height="43sp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_arrow_back_black_24dp" />

    <LinearLayout
        android:id="@+id/ll_input_profit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ib_back2"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button_gray"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/tv_media_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modal_anda_saat_ini"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/edt_profit_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Rp 2.500.000"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:id="@+id/div_atas"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/tv_modal_notes"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_modal_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/div_bawah"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:text="Penrikan Modal Dapat Ditunggu 2x24
Jam ke Rekening Usaha"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <View
        android:id="@+id/div_bawah"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/btn_tarik"
        android:layout_marginBottom="25dp"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn_tarik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_button_blue"
        android:text="@string/tarik"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

</RelativeLayout>